@model PassRegistration.Models.PassRegistration

@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    


    <div class="col-lg-4">
        <br />
        <br />
        <br />
        <br />
        <p>This is filler area</p>
    </div>

    <div class="col-lg-4">
        @using (Html.BeginForm("Add", "PassRegistration", FormMethod.Post, new { @class = "form" }))
        {
            <br />
            <br />
            <br />
            <br />
            <h2> </h2>
            <h2>New Registration</h2>

            <center>
                <div class="form-group">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Address)
                    @Html.TextAreaFor(m => m.Address, new { @class = "form-control", rows = 4 })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.NumberInHouse)
                    @Html.TextAreaFor(m => m.NumberInHouse, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.City)
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.PhoneNumber)
                    @Html.TextAreaFor(m => m.PhoneNumber, new { @class = "form-control", rows = 4 })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextAreaFor(m => m.Email, new { @class = "form-control" })
                </div>

                <input type="submit" class="btn btn-primary" value="Save" />
            </center>
        }
    </div>

    <div class="col-lg-4">
        <br />
        <br />
        <br />
        <br />
        <p>This is filler area</p>
    </div>
